{
  "family": "image-app-task",
  "executionRoleArn": "arn:aws:iam::<your-account-id>:role/<your-ecs-task-execution-role>",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "image-app",
      "image": "<IMAGE_URI>",
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 8082
        }
      ],
      "essential": true
    }
  ]
}